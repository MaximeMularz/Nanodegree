<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>


    <style name="AppTheme.Spotify" parent="AppTheme"/>

    <style name="AppTheme.TopTen" parent="AppTheme"/>

    <!-- main activity toolbar style -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <!-- Style for forecast listview -->
    <style name="artistsListView">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

    <style name="appButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#fff</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#ff6f00</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="capButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#fff</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#f50057</item>
        <item name="android:layout_margin">10dp</item>
    </style>



    <!-- Style Progress Bar -->
    <style name="GenericProgressBackground" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/material_blue_grey_800</item>

    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:indeterminate">true</item>
        <item name="android:gravity">center</item>
        <item name="android:startColor">@color/white</item>
        <item name="android:endColor">@color/white</item>
    </style>

</resources>
