<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffdfeaf1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/titleName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="@string/my_title"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            style="@style/appButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleName"
            android:onClick="spotifyStreamer"
            android:text="@string/media_streamer" />

        <Button
            android:id="@+id/button2"
            style="@style/appButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button"
            android:onClick="scoresApp"
            android:text="@string/super_duo1" />


        <Button
            android:id="@+id/button3"
            style="@style/appButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button2"
            android:onClick="libraryApp"
            android:text="@string/super_duo2" />

        <Button
            android:id="@+id/button5"
            style="@style/appButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button3"
            android:onClick="buildItBigger"
            android:text="@string/ant_terminator"

            />

        <Button
            android:id="@+id/button6"
            style="@style/appButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button5"
            android:onClick="baconReader"
            android:text="@string/materialize" />

        <Button
            android:id="@+id/button4"
            style="@style/capButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button6"
            android:onClick="capstoneMyOwnApp"
            android:text="@string/capstone" />

    </RelativeLayout>
</ScrollView>